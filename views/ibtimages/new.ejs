<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Ny IBT Övning</h1>
  <div class="col-6 offset-3">
    <form
      action="/ibtimages"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Titel</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="ibtImage[title]"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>
      <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="ibtImage[image]" required>
                <div class="valid-feedback">
                    Ok!
                </div>
            </div> -->
      <div class="mb-3">
        <label class="form-label" for="description">Beskrivning</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="ibtImage[description]"
          required
        ></textarea>
        <div class="valid-feedback">Ok!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label">Välj filer...</span>
            <span class="form-file-button">Bläddra</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Lägg till övning</button>
      </div>
    </form>
    <a href="/ibtimages">Alla övningar</a>
  </div>
</div>
