<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Redigera Övning</h1>
  <div class="col-6 offset-3">
    <form
      action="/ibtimages/<%=ibtImage._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="ibtImage[title]"
          value="<%=ibtImage.title %>"
          required
        />
        <div class="valid-feedback">Ok!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Beskrivning</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="ibtImage[description]"
          required
        >
<%= ibtImage.description%></textarea
        >
        <div class="valid-feedback">Ok!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Lägg till filer...</span
            >
            <span class="form-file-button">Bläddra</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <% ibtImage.images.forEach(function(img, i) { %>
        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Radera</label>
        <% })%>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Uppdatera övning</button>
      </div>
    </form>
    <a href="/ibtimages/<%= ibtImage._id%>">Tillbaka till övningar</a>
  </div>
</div>
