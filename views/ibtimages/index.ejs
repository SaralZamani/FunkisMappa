<% layout('layouts/boilerplate')%>

<h1>Alla IBT Övnignar</h1>
<div>
  <a href="/ibtimages/new">Lägg till övning</a>
</div>
<% for (let ibtImage of ibtImages){%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=ibtImage.images[0].url%>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= ibtImage.title %></h5>
        <p class="card-text"><%= ibtImage.description %></p>
        <a class="btn btn-primary" href="/ibtimages/<%=ibtImage._id%>"
          >Titta <%=ibtImage.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
